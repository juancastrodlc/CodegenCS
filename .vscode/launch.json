{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Unit Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/src/Core/CodegenCS.Tests/CodegenCS.Tests.csproj",
                "--logger:console;verbosity=detailed"
            ],
            "cwd": "${workspaceFolder}/src",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "TMPDIR": "${workspaceFolder}/.tmp",
                "TMP": "${workspaceFolder}/.tmp",
                "TEMP": "${workspaceFolder}/.tmp"
            }
        },
        {
            "name": "Debug Tool Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
