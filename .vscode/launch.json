        {
            "name": "Debug dotnet-codegencs CLI",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-cli",
            "program": "${workspaceFolder}/src/Tools/dotnet-codegencs/bin/Debug/net8.0/dotnet-codegencs.dll",
            "args": ["template", "run", "MyTemplate.cs"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "TMPDIR": "${workspaceFolder}/.tmp",
                "TMP": "${workspaceFolder}/.tmp",
                "TEMP": "${workspaceFolder}/.tmp"
            }
        },
        {
            "name": "Attach to Process",
            "type": "coreclr",
            "request": "attach",
            "justMyCode": false
        }
    ]
}